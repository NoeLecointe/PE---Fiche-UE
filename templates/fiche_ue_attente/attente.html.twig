                <td class="align-middle text-center">
                    <form method="POST" action="/ficheUEattente/consulter">
                        <input type="hidden" name="code" id="code" value="{{u.code_ue}}" />
                        <button type="submit" class="btn btn-success" name="modif"><i class="uil uil-hourglass"> Consulter</i></button>
                    </form>
                </td>
            </tr>
        {% endif %}
